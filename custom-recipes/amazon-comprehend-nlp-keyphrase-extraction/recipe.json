{
    "meta": {
        "label": "Key Phrase Extraction",
        "description": "Extract key phrases (typically 1-4 words each) in a text to identify the main points",
        "icon": "icon-amazon-comprehend icon-cloud"
    },
    "kind": "PYTHON",
    "selectableFromDataset": "input_dataset",
    "inputRoles": [
        {
            "name": "input_dataset",
            "label": "Input Dataset",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "outputRoles": [
        {
            "name": "output_dataset",
            "label": "Output Dataset",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "params": [
        {
            "name": "connectionInfo",
            "label": "AWS Connection",
            "type": "PRESET",
            "parameterSetId" : "amazon-comprehend-connection-info",
            "mandatory" : true
        },
        {
            "name": "text_column",
            "label": "Input Text Column",
            "type": "COLUMN",
            "columnRole": "input_dataset",
            "mandatory": true
        },
        {
            "name": "language",
            "label": "Language",
            "type": "COLUMN",
            "columnRole": "input_dataset",
            "description": "in ISO 639-1 format (empty = en)",
            "mandatory": false,
            "defaultValue": "en"
        },
        {
            "name": "should_output_raw_results",
            "label": "Output Raw Response?",
            "type": "BOOLEAN"
        }
    ]
}
