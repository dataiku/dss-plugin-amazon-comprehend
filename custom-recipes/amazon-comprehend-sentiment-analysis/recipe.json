{
    "meta": {
        "label": "Sentiment Analysis",
        "description": "Estimate the sentiment polarity of a text (positive, negative, neutral or mixed)",
        "icon": "icon-DKU_amazon-comprehend icon-cloud"
    },
    "kind": "PYTHON",
    "selectableFromDataset": "input_dataset",
    "inputRoles": [
        {
            "name": "input_dataset",
            "label": "Input Dataset",
