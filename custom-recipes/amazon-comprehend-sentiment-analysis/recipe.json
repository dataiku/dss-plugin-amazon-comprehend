            "defaultValue": "en"
        },
        {
            "name": "output_probability",
            "type": "BOOLEAN",
            "label": "Output probability",
            "defaultValue": true
        },
        {
            "name": "should_output_raw_results",
            "label": "Output Raw Response?",
            "type": "BOOLEAN"
