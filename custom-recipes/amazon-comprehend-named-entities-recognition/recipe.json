{
    "meta": {
        "label": "Named Entities Recognition",
        "description": "Identify “real-world objects” (i.e. People names, Dates, Places, etc) in texts",
        "icon": "icon-DKU_amazon-comprehend icon-cloud"
    },
    "kind": "PYTHON",
    "selectableFromDataset": "input_dataset",
    "inputRoles": [
        {
            "name": "input_dataset",
            "label": "Input Dataset",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "outputRoles": [
        {
            "name": "output_dataset",
            "label": "Output Dataset",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "params": [
        {
            "name": "connectionInfo",
            "label": "AWS Connection",
            "type": "PRESET",
            "parameterSetId" : "amazon-comprehend-connection-info",
            "mandatory" : true
        },
        {
            "name": "text_column",
            "label": "Input Text Column",
            "type": "COLUMN",
            "columnRole": "input_dataset",
            "mandatory": true
        },
        {
            "name": "language",
            "label": "Language",
            "type": "COLUMN",
            "columnRole": "input_dataset",
            "description": "in ISO 639-1 format (empty = en)",
            "mandatory": false,
            "defaultValue": "en"
        },
        {
            "name": "output_format",
            "label": "Output Format",
            "type": "SELECT",
            "selectChoices": [
                {"value": "single_column", "label": "A single JSON column"},
                {"value": "multiple_columns", "label": "One colum per entity type"}
            ],
            "defaultValue": "single_column",
            "mandatory": true
        },
        {
            "name": "should_output_raw_results",
            "label": "Output Raw Response?",
            "type": "BOOLEAN"
        }
    ]
}
